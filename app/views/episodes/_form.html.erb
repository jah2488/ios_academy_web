<%= simple_form_for @episode, html: { multipart: true } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :video_link %>
    <%= image_tag @episode.image.url(:thumb), class:'img-polaroid' %>
    <%= f.input :image %>
    <%= f.input :paid %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
