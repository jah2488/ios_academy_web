<h2>Listing episodes</h2>

<table class='table table-hover'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @episodes.each do |episode| %>
      <tr>
        <td><%= image_tag(episode.image.url(:thumb), class: 'img-polaroid') %></td>
        <td><%= episode.title %><br/><span class='label label-info'><%= episode.paid_or_free %></span></td>
        <td><%= episode.description %></td>
        <td><%= link_to 'Show', episode, class: 'btn btn-large' %></td>
        <td><%= link_to('Edit', edit_episode_path(episode), class: 'btn') if current_admin %></td>
        <td><%= link_to('Destroy', episode, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger', style: 'color:#FFF') if current_admin %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

