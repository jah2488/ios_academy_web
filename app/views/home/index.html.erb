<h1>iOS Academy</h1>
<fieldset>
  <legend>Episodes</legend>
  <table class='table table-hover'>
    <thead>
      <th></th>
    </thead>
    <tbody>
      <% @episodes.each do |episode| %>
        <tr>
          <td><%= image_tag episode.image.url(:medium) %></td>
          <td><h3><%= episode.title %></h3></td>
          <td><%= link_to "Watch", episode, class: 'btn btn-large' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</fieldset>
